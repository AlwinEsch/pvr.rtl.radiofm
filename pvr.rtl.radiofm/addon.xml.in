<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="pvr.rtl.radiofm"
  version="0.1.0"
  name="RTL-SDR FM Radio Client"
  provider-name="Alwin Esch, Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.pvrclient"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">PVR client to connect RTL-SDR as FM Radio to Kodi</summary>
    <description lang="en">RTL-SDR frontend; supporting streaming of FM Radio. ATTENTION: Complete processing is performed with CPU and need better performance of it!</description>
    <disclaimer lang="en">This is unstable software! The authors are in no way responsible for failed recordings, incorrect timers, wasted hours, or any other undesirable effects..</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
